# DarkSwap Deployment Environment Variables
# Copy this file to .env and fill in the values

# JWT Authentication
JWT_SECRET=change-this-to-a-secure-random-string
JWT_EXPIRY=24h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info  # debug, info, warn, error

# Relay Server Configuration
RELAY_MAX_CONNECTIONS=1000
RELAY_MAX_CIRCUITS=500
RELAY_CIRCUIT_TIMEOUT=3600  # seconds
RELAY_BANDWIDTH_LIMIT=1048576  # bytes per second

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-this-to-a-secure-password

# SSL Certificates
# For production, use certificates from a trusted CA
# For development and staging, you can generate self-signed certificates
# using the generate-ssl-certs.sh script in the security directory

# Database Configuration (if using a database)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=darkswap
# DB_USER=darkswap
# DB_PASSWORD=change-this-to-a-secure-password

# Redis Configuration (if using Redis)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=change-this-to-a-secure-password

# Email Configuration (if sending emails)
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USER=noreply@example.com
# EMAIL_PASSWORD=change-this-to-a-secure-password
# EMAIL_FROM=DarkSwap <noreply@example.com>

# Analytics (if using analytics)
# ANALYTICS_ID=your-analytics-id

# Feature Flags
ENABLE_RUNES=true
ENABLE_ALKANES=true
ENABLE_HARDWARE_WALLETS=true

# Environment-specific settings
# These are used to determine which environment is being deployed
ENVIRONMENT=production  # development, staging, production